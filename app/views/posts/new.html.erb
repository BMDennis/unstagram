<%= form_for @post, html: { multipart: true } do |f| %>
  <p>
    <%= f.label :title %>
    <%= f.text_field :title %>
  </p>

  <p>
    <%= f.label :description %>
    <%= f.text_area :description %>
  </p>

  <p>
    <%= f.label :picture %>
    <%= f.file_field :picture %>
  </p>

  <p>
    <%= f.label :tag_names, 'Tags' %>
    <%= f.text_field :tag_names %>
  </p>
  <%= f.submit 'Post it!' %>
<% end %>