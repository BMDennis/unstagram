<%= link_to "New post", new_post_path, class: 'btn btn-lg btn-info new-post-btn' %>
No comments yet
<% if @posts.none? %>
  No posts yet
<% else %>
  <div class="row">
    <% @posts.each do |post| %>
      <div class='col-md-4 post' data-id='<%= post.id %>'>
        <div class="panel panel-default">
          <div class="panel-heading">
            <h3 class="panel-title"><%= post.title %></h3>
          </div>
          <div class="panel-body">
            <% if post.picture.exists? %>
              <%= image_tag post.picture.url(:medium), class: 'uploaded-pic' %>
            <% end %>
            <% if post.user == current_user %>
              <%= link_to "Delete", post_path(post), method: :delete, class: 'btn btn-lg btn-danger' %>
            <% end %>
            <p>
              <%= link_to "Show More", '#', class: 'btn btn-lg btn-info', data: { toggle: 'modal', target: ".image-modal-#{post.id}" } %>

              <%= link_to "❤ #{post.likes.count}", post_likes_path(post), class: "btn btn-lg btn-default btn-like" %>
              <%= link_to "Map", edit_post_map_path(post), class: "btn btn-lg btn-default" %>
            </p>
            <p>
              <% post.tags.each do |tag| %>
                <%= link_to tag.formatted_name, tag %>
              <% end %>
            </p>
          </div> <!-- end of panel-body -->
          <div id="comments">
            <%= form_for [post, @comment] do |f| %>
              <%= f.label :comment %>
              <%= f.text_area :comment %>
              <%= f.submit "Add comment" %>
            <% end %>
          </div>
        </div> <!-- end of panel-default -->
        <p><%= alert %></p>
        <ul class="comments">
          <% post.comments.each do |comment| %>
            <li> <%= comment.comment %> from <%= comment.user.email %></li>
          <% end %>
        </ul>
        <%= post.comments.count %>
      </div> <!-- end of col-md-4 -->
      <div class="modal fade image-modal-<%= post.id %>">
        <div class="modal-dialog modal-lg">
          <div class="modal-content">
            <div class="modal-header">
              <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
              <h4 class="modal-title"><%= post.title %></h4>
            </div>
            <div class="modal-body">
              <% if post.picture.exists? %>
                <%= image_tag post.picture.url, class: 'uploaded-pic' %>
              <% end %>
            </div>
          </div>
        </div>
      </div> <!-- end of modal -->
    <% end %>
  </div>
<% end %>