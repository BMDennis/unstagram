<!DOCTYPE html>
<html>
<head>
  <title>InstagramMarch</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
  <!-- Navbar Fixed Top -->
  <div class="navbar navbar-inverse navbar-fixed-top" role="navigation">
    <div class="container">
      <div class="navbar-header">
        <a class="navbar-brand" href="#">Unstagram</a>
      </div>

      <% unless user_signed_in? %>
        <div class="navbar-collapse collapse">
          <div class="navbar-form navbar-right">
            <%= form_for(User.new, as: :user, url: session_path(:user)) do |f| %>
              <div class="form-group">
                <div>
                  <%= f.label :email %><br />
                  <%= f.email_field :email, autofocus: true %>
                </div>
              </div>
              <div class="form-group">
                <%= f.label :password %><br />
                <%= f.password_field :password, autocomplete: "off" %>
              </div>
              <%= f.submit "Sign in" %>
            <% end %>
          </div>
        </div><!--/.navbar-collapse -->
      <% else %>
        <%= link_to "Sign out", destroy_user_session_path, method: :delete, class: "btn btn-success navbar-right sign_out" %>
      <% end %>

    </div>
  </div> <!-- end of Navbar Fixed Top -->

  <%= notice %>
  <%= alert %>

  <div class="jumbotron">
    <h1>Welcome to Unstagram</h1>
  </div>

  <div class="container">
    <hr>
    <%= yield %>
  </div>

  <footer>
    <p>&copy; Makers</p>
  </footer>
</body>
</html>
